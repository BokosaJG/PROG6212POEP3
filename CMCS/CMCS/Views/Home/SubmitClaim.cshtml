@model CMCS.ViewModels.ClaimViewModel

@{
    ViewData["Title"] = "Submit Monthly Claim";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label asp-for="LecturerName" class="form-label"></label>
                <input asp-for="LecturerName" class="form-control" />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="HoursWorked" class="form-label"></label>
                        <input asp-for="HoursWorked" class="form-control" type="number" step="0.5" />
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="HourlyRate" class="form-label"></label>
                        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Total Amount: R <span id="totalAmount">0.00</span></label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AdditionalNotes" class="form-label"></label>
                <textarea asp-for="AdditionalNotes" class="form-control" rows="4"></textarea>
                <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Supporting Documents</label>
                <input type="file" name="SupportingDocuments" class="form-control" multiple
                       accept=".pdf,.docx,.xlsx,.jpg,.png" />
                <small class="form-text text-muted">
                    Maximum file size: 10MB. Allowed formats: PDF, DOCX, XLSX, JPG, PNG
                </small>
            </div>

            <button type="submit" class="btn btn-success btn-lg">Submit Claim</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            function calculateTotal() {
                var hours = parseFloat($('#HoursWorked').val()) || 0;
                var rate = parseFloat($('#HourlyRate').val()) || 0;
                var total = hours * rate;
                $('#totalAmount').text(total.toFixed(2));
            }

            $('#HoursWorked, #HourlyRate').on('input', calculateTotal);
            calculateTotal();
        });
    </script>
}