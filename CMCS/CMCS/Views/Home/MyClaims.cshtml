@model IEnumerable<CMCS.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        You haven't submitted any claims yet.
        <a href="@Url.Action("SubmitClaim")" class="alert-link">Submit your first claim</a>.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Submission Date</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Approval Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.SubmissionDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@claim.HoursWorked</td>
                        <td>R @claim.HourlyRate.ToString("F2")</td>
                        <td>R @claim.TotalAmount.ToString("F2")</td>
                        <td>
                            @if (claim.Status == "Pending")
                            {
                                <span class="badge bg-warning">@claim.Status</span>
                            }
                            else if (claim.Status == "Approved")
                            {
                                <span class="badge bg-success">@claim.Status</span>
                            }
                            else if (claim.Status == "Rejected")
                            {
                                <span class="badge bg-danger">@claim.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@claim.Status</span>
                            }
                        </td>
                        <td>
                            @if (claim.ApprovalDate.HasValue)
                            {
                                @claim.ApprovalDate.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-info"
                                    data-bs-toggle="modal"
                                    data-bs-target="#claimDetails@(claim.Id)">
                                View Details
                            </button>

                            <!-- Claim Details Modal -->
                            <div class="modal fade" id="claimDetails@(claim.Id)" tabindex="-1">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Claim Details</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <strong>Lecturer:</strong>
                                                    <p>@claim.LecturerName</p>
                                                </div>
                                                <div class="col-md-6">
                                                    <strong>Submission Date:</strong>
                                                    <p>@claim.SubmissionDate.ToString("dd/MM/yyyy HH:mm")</p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <strong>Hours Worked:</strong>
                                                    <p>@claim.HoursWorked</p>
                                                </div>
                                                <div class="col-md-4">
                                                    <strong>Hourly Rate:</strong>
                                                    <p>R @claim.HourlyRate.ToString("F2")</p>
                                                </div>
                                                <div class="col-md-4">
                                                    <strong>Total Amount:</strong>
                                                    <p>R @claim.TotalAmount.ToString("F2")</p>
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(claim.AdditionalNotes))
                                            {
                                                <div class="row">
                                                    <div class="col-12">
                                                        <strong>Additional Notes:</strong>
                                                        <p>@claim.AdditionalNotes</p>
                                                    </div>
                                                </div>
                                            }
                                            @if (claim.Status == "Rejected" && !string.IsNullOrEmpty(claim.RejectionReason))
                                            {
                                                <div class="row">
                                                    <div class="col-12">
                                                        <strong>Rejection Reason:</strong>
                                                        <p class="text-danger">@claim.RejectionReason</p>
                                                    </div>
                                                </div>
                                            }
                                            @if (claim.Documents.Any())
                                            {
                                                <div class="row">
                                                    <div class="col-12">
                                                        <strong>Supporting Documents:</strong>
                                                        <ul>
                                                            @foreach (var doc in claim.Documents)
                                                            {
                                                                <li>
                                                                    <a href="@doc.FilePath" target="_blank" class="text-decoration-none">
                                                                        @doc.OriginalFileName
                                                                    </a>
                                                                    <small class="text-muted">(@(doc.FileSize / 1024) KB)</small>
                                                                </li>
                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="row">
                                                    <div class="col-12">
                                                        <strong>Supporting Documents:</strong>
                                                        <p class="text-muted">No documents uploaded</p>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("SubmitClaim")" class="btn btn-primary">Submit New Claim</a>
    </div>
}